
#include <iostream> 

#include <conio.h> 

using namespace std; 

int main() 

{ 

    double num[10]; 

    int m, s, e,largest, smallest; 

    double sum, average; 

   

    cout << "Enter Ten integers: " << endl; 

    for(m = 0; m < 10; m++) 

        cin >> num[m]; 

     

    s = 0; 

    for ( m = 1; m < 10; m++) 

        if (num[s] < num[m]) 

            s = m; 

             

    for (m = 1; m < 10; m++) 

        if (num[e] > num[m]) 

            e = m; 

                 

    largest = num[s]; 

    smallest = num[e]; 

     

    cout << "The Largest Integer is = " << largest << endl; 

    cout << "The Smallest Integer is = " << smallest << endl; 

 

    sum = 0; 

    for(m = 0; m < 10; m++) 

        sum = sum + num[m];     

        average = sum/10; 

  

    cout << "The Total is = " << sum << endl; 

    cout << "The Average is = " << average << endl; 

     

    _getch(); 

    return 0; 

} 
